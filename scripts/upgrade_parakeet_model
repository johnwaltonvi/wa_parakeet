#!/usr/bin/env bash
set -euo pipefail
ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
VENV_DIR="$ROOT_DIR/.venv"
PYTHON="$VENV_DIR/bin/python"
SCRIPT="$ROOT_DIR/scripts/upgrade_parakeet_model.py"

if [ ! -x "$PYTHON" ]; then
  echo "Virtual environment missing at $VENV_DIR. Run scripts/bootstrap.sh first." >&2
  exit 1
fi

exec "$PYTHON" "$SCRIPT" "$@"
